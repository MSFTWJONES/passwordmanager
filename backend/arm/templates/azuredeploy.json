{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "backendName": {
            "type": "string"
        },
        "backendHostingPlanName": {
            "type": "String"
        },
        "backendAlwaysOn": {
            "type": "Bool"
        },
        "backendSku": {
            "type": "String"
        },
        "backendSkuCode": {
            "type": "String"
        },
        "backendWorkerSize": {
            "type": "String"
        },
        "backendWorkerSizeId": {
            "type": "String"
        },
        "backendNumberOfWorkers": {
            "type": "String"
        },
        "backendCurrentStack": {
            "type": "String"
        },
        "backendEnvironments": {
            "defaultValue": [
                {
                    "name": "staging",
                    "buildVersion": ""
                }
            ],
            "type": "array",
            "metadata": {
                "description": "Array with the names for the environment slots"
            },
            "maxLength": 19
        },
        "frontendName": {
            "type": "string",
            "defaultValue": "swa-pmp-fe-001"
        },
        "frontendSku": {
            "type": "string",
            "defaultValue": "Free"
        },
        "frontendSkuCode": {
            "type": "string",
            "defaultValue": "Free"
        },
        "frontendRepositoryUrl": {
            "type": "string",
            "defaultValue": "https://github.com/willjonesazureadmin/password-manager-frontend"
        },
        "frontendBranch": {
            "type": "string",
            "defaultValue": "main"
        },
        "frontendRepositoryToken": {
            "type": "securestring"
        },
        "FrontendAppLocation": {
            "type": "string",
            "defaultValue": "/"
        },
        "frontendApiLocation": {
            "type": "string",
            "defaultValue": ""
        },
        "FrontendAppArtifactLocation": {
            "type": "string",
            "defaultValue": "wwwroot"
        },
        "customDnsZone": {
            "type": "string",
            "defaultValue": "azureadmin.co.uk"
        },
        "frontendCustomDnsName": {
            "type": "string",
            "defaultValue": "test"
        },
        "dnsZoneSubscription": {
            "type": "string",
            "defaultValue": "484147e9-d24d-41b4-86a8-50819355deb7"
        },
        "dnsZoneResourceGroup": {
            "type": "string",
            "defaultValue": "ss-dns-rg"
        },
        "keyVaultName": {
            "type": "string",
            "defaultValue": "azureadminpassmankv"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "name": "BackendApp",
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "Inner"
                },
                "parameters": {
                    "backendName": {
                        "value": "[parameters('backendName')]"
                    },
                    "backendHostingPlanName": {
                        "value": "[parameters('backendHostingPlanName')]"
                    },
                    "backendAlwaysOn": {
                        "value": "[parameters('backendAlwaysOn')]"
                    },
                    "backendSku": {
                        "value": "[parameters('backendSku')]"
                    },
                    "backendSkuCode": {
                        "value": "[parameters('backendSkuCode')]"
                    },
                    "backendWorkerSize": {
                        "value": "[parameters('backendWorkerSize')]"
                    },
                    "backendWorkerSizeId": {
                        "value": "[parameters('backendWorkerSizeId')]"
                    },
                    "backendNumberOfWorkers": {
                        "value": "[parameters('backendNumberOfWorkers')]"
                    },
                    "backendCurrentStack": {
                        "value": "[parameters('backendCurrentStack')]"
                    },
                    "backendEnvironments": {
                        "value": "[parameters('backendEnvironments')]"
                    }
                },
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "backendName": {
                            "type": "string"
                        },
                        "backendHostingPlanName": {
                            "type": "String"
                        },
                        "backendAlwaysOn": {
                            "type": "Bool"
                        },
                        "backendSku": {
                            "type": "String"
                        },
                        "backendSkuCode": {
                            "type": "String"
                        },
                        "backendWorkerSize": {
                            "type": "String"
                        },
                        "backendWorkerSizeId": {
                            "type": "String"
                        },
                        "backendNumberOfWorkers": {
                            "type": "String"
                        },
                        "backendCurrentStack": {
                            "type": "String"
                        },
                        "backendEnvironments": {
                            "type": "array"
                        }
                    },
                    "resources": [
                        {
                            "type": "Microsoft.Web/serverfarms",
                            "apiVersion": "2018-02-01",
                            "name": "[parameters('backendHostingPlanName')]",
                            "location": "[resourceGroup().location]",
                            "dependsOn": [],
                            "tags": {},
                            "sku": {
                                "Tier": "[parameters('backendSku')]",
                                "Name": "[parameters('backendSkuCode')]"
                            },
                            "kind": "",
                            "properties": {
                                "name": "[parameters('backendHostingPlanName')]",
                                "workerSize": "[parameters('backendWorkerSize')]",
                                "workerSizeId": "[parameters('backendWorkerSizeId')]",
                                "numberOfWorkers": "[parameters('backendNumberOfWorkers')]"
                            }
                        },
                        {
                            "type": "Microsoft.Web/sites",
                            "apiVersion": "2018-11-01",
                            "name": "[parameters('backendName')]",
                            "location": "[resourceGroup().location]",
                            "dependsOn": [
                                "[concat('Microsoft.Web/serverfarms/', parameters('backendHostingPlanName'))]"
                            ],
                            "tags": {},
                            "properties": {
                                "name": "[parameters('backendName')]",
                                "siteConfig": {
                                    "metadata": [
                                        {
                                            "name": "CURRENT_STACK",
                                            "value": "[parameters('backendCurrentStack')]"
                                        }
                                    ],
                                    "alwaysOn": "[parameters('backendAlwaysOn')]"
                                },
                                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('backendHostingPlanName'))]",
                                "clientAffinityEnabled": true
                            },
                            "identity": {
                                "type": "SystemAssigned"
                            }
                        },
                        
                        {
                            "apiVersion": "2020-06-01",
                            "type": "Microsoft.Web/sites/slots",
                            "name": "[concat(parameters('backendName'), '/', parameters('backendEnvironments')[copyIndex()].name)]",
                            "kind": "app",
                            "location": "[resourceGroup().location]",
                            "comments": "This specifies the web app slots.",
                            "tags": {
                                "displayName": "WebAppSlots"
                            },
                            "properties": {
                                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('backendHostingPlanName'))]",
                                "buildVersion": "[parameters('backendEnvironments')[copyIndex()].buildVersion]"
                            },
                            "dependsOn": [
                                "[resourceId('Microsoft.Web/Sites', parameters('backendName'))]"
                            ],
                            "copy": {
                                "name": "webPortalSlot",
                                "count": "[length(parameters('backendEnvironments'))]"
                            }
                        },
                        {
                            "type": "Microsoft.Authorization/roleAssignments",
                            "name": "[guid(resourceGroup().id, 'appIdentity')]",
                            "apiVersion": "2018-09-01-preview",
                            "dependsOn": [
                                "[concat('Microsoft.Web/sites/', parameters('backendName'))]"
                            ],
                            "properties": {
                                "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]",
                                "principalId": "[reference(resourceId('Microsoft.Web/sites', parameters('backendName')), '2018-11-01','full').identity.principalId]",
                                "scope": "[resourceGroup().Id]"
                            }
                        }
                    ],
                    "outputs": {
                        "hostname": {
                            "type": "string",
                            "value": "[reference(resourceId('Microsoft.Web/sites', parameters('backendName')), '2018-02-01').defaultHostName]"
                        },
                        "deploymentSlotHostName": {
                            "type": "string",
                            "value": "[reference(resourceId('Microsoft.Web/sites/slots', parameters('backendName'), parameters('backendEnvironments')[0].name)).defaultHostName]"
                        },
                        "deploymentSlotName": {
                            "type": "string",
                            "value": "[parameters('backendEnvironments')[0].name]"
                        },
                        "appName": {
                            "type": "string",
                            "value": "[parameters('backendName')]"
                        },
                        "identity": {
                            "type": "string",
                            "value": "[reference(resourceId('Microsoft.Web/sites', parameters('backendName')), '2018-11-01','full').identity.principalId]"
                        }
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "name": "KeyVault",
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "Inner"
                },
                "parameters": {
                    "keyVaultName": {
                        "value": "[parameters('keyVaultName')]"
                    }
                },
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "keyVaultName": {
                            "type": "string"
                        }
                    },
                    "resources": [
                        {
                            "type": "Microsoft.KeyVault/vaults",
                            "apiVersion": "2019-09-01",
                            "name": "[parameters('keyVaultName')]",
                            "location": "[resourceGroup().location]",
                            "properties": {
                                "enabledForDeployment": false,
                                "enabledForDiskEncryption": false,
                                "enabledForTemplateDeployment": false,
                                "tenantId": "[subscription().tenantId]",
                                "accessPolicies": [
                                ],
                                "sku": {
                                    "name":  "standard",
                                    "family": "A"
                                },
                                "networkAcls": {
                                    "defaultAction": "Allow",
                                    "bypass": "AzureServices"
                                }
                            }
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "name": "FrontendApp",
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "parameters": {
                    "staticWebAppName": {
                        "value": "[parameters('frontendName')]"
                    },
                    "sku": {
                        "value": "[parameters('frontendSku')]"
                    },
                    "skucode": {
                        "value": "[parameters('frontendSkuCode')]"
                    },
                    "repositoryUrl": {
                        "value": "[parameters('frontendRepositoryUrl')]"
                    },
                    "branch": {
                        "value": "[parameters('frontendBranch')]"
                    },
                    "repositoryToken": {
                        "value": "[parameters('frontendRepositoryToken')]"
                    },
                    "appLocation": {
                        "value": "[parameters('FrontendAppLocation')]"
                    },
                    "apiLocation": {
                        "value": "[parameters('frontendApiLocation')]"
                    },
                    "appArtifactLocation": {
                        "value": "[parameters('FrontendAppArtifactLocation')]"
                    }
                },
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "staticWebAppName": {
                            "type": "string",
                            "defaultValue": "swa-pmp-fe-001"
                        },
                        "sku": {
                            "type": "string",
                            "defaultValue": "Free"
                        },
                        "skucode": {
                            "type": "string",
                            "defaultValue": "Free"
                        },
                        "repositoryUrl": {
                            "type": "string",
                            "defaultValue": "https://github.com/willjonesazureadmin/passwordmanager"
                        },
                        "branch": {
                            "type": "string",
                            "defaultValue": "main"
                        },
                        "repositoryToken": {
                            "type": "securestring"
                        },
                        "appLocation": {
                            "type": "string",
                            "defaultValue": "/"
                        },
                        "apiLocation": {
                            "type": "string",
                            "defaultValue": ""
                        },
                        "appArtifactLocation": {
                            "type": "string",
                            "defaultValue": "wwwroot"
                        }
                    },
                    "resources": [
                        {
                            "apiVersion": "2019-12-01-preview",
                            "name": "[parameters('staticWebAppName')]",
                            "type": "Microsoft.Web/staticSites",
                            "location": "[resourceGroup().location]",
                            "properties": {
                                "repositoryUrl": "[parameters('repositoryUrl')]",
                                "branch": "[parameters('branch')]",
                                "repositoryToken": "[parameters('repositoryToken')]",
                                "buildProperties": {
                                    "appLocation": "[parameters('appLocation')]",
                                    "apiLocation": "[parameters('apiLocation')]",
                                    "appArtifactLocation": "[parameters('appArtifactLocation')]"
                                }
                            },
                            "sku": {
                                "Tier": "[parameters('sku')]",
                                "Name": "[parameters('skuCode')]"
                            }
                        }
                    ],
                    "outputs": {
                        "staticWebAppHostName": {
                            "type": "string",
                            "value": "[reference(resourceId('Microsoft.Web/staticSites', parameters('staticWebAppName')), '2019-12-01-preview').defaultHostname]"
                        }
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "dns",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments','FrontendApp')]"
            ],
            "subscriptionId": "[parameters('dnsZoneSubscription')]",
            "resourceGroup": "[parameters('dnsZoneResourceGroup')]",
            "properties": {
                "mode": "Incremental",
                "expressionEvaluationOptions": {
                    "scope": "Inner"
                },
                "parameters": {
                    "customDnsZone": {
                        "value": "[parameters('customDnsZone')]"
                    },
                    "customDnsName": {
                        "value": "[parameters('frontendCustomDnsName')]"
                    },
                    "customDnsAlias": {
                        "value": "[reference('FrontendApp').outputs.staticWebAppHostName.value]"
                    }
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "customDnsZone": {
                            "type": "string",
                            "defaultValue": "azureadmin.co.uk"
                        },
                        "customDnsName": {
                            "type": "string",
                            "defaultValue": "test"
                        },
                        "customDnsAlias": {
                            "type": "string",
                            "defaultValue": "testAlias"
                        }
                    },
                    "resources": [
                        {
                            "type": "Microsoft.Network/dnsZones",
                            "apiVersion": "2018-05-01",
                            "name": "[parameters('customDnsZone')]",
                            "location": "global",
                            "properties": {

                            }
                        },
                        {
                            "type": "Microsoft.Network/dnsZones/CNAME",
                            "apiVersion": "2018-05-01",
                            "name": "[concat(parameters('customDnsZone'), '/', parameters('customDnsName'))]",
                            "location": "global",
                            "dependsOn": [
                                "[parameters('customDnsZone')]"
                            ],
                            "properties": {
                                "TTL": 3600,
                                "CNAMERecord": {
                                    "cname": "[parameters('customDnsAlias')]"
                                }
                            }
                        }
                    ],
                    "outputs": {
                    }
                }
            }
        },
        {
            "type": "Microsoft.Web/staticSites/customDomains",
            "apiVersion": "2020-12-01",
            "name": "[concat(parameters('frontendName'),'/', parameters('frontendCustomDnsName'),'.',parameters('customDnsZone'))]",
            "dependsOn": [
                "[resourceId(parameters('dnsZoneSubscription'), parameters('dnsZoneResourceGroup'), 'Microsoft.Resources/deployments','dns')]"
            ],
            "properties": {

            }
        }

    ]
}
