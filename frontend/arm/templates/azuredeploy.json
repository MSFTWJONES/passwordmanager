{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "staticWebAppName": {
            "type": "string",
            "defaultValue": "swa-pmp-fe-001"
        },
        "sku": {
            "type": "string",
            "defaultValue": "Free"
        },
        "skucode": {
            "type": "string",
            "defaultValue": "Free"
        },
        "repositoryUrl": {
            "type": "string",
            "defaultValue": "https://github.com/willjonesazureadmin/password-manager-frontend"
        },
        "branch": {
            "type": "string",
            "defaultValue": "main"
        },
        "repositoryToken": {
            "type": "securestring"
        },
        "appLocation": {
            "type": "string",
            "defaultValue": "/"
        },
        "apiLocation": {
            "type": "string",
            "defaultValue": ""
        },
        "appArtifactLocation": {
            "type": "string",
            "defaultValue": "wwwroot"
        },
        "customDnsZone": {
            "type": "string",
            "defaultValue": "azureadmin.co.uk"
        },
        "customDnsName": {
            "type": "string",
            "defaultValue": "test"
        },
        "dnsZoneSubscription": {
            "type": "string",
            "defaultValue": "484147e9-d24d-41b4-86a8-50819355deb7"
        },
        "dnsZoneResourceGroup": {
            "type": "string",
            "defaultValue": "ss-dns-rg"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "name": "staticWebApp",
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "parameters": {
                    "staticWebAppName": {
                        "value": "[parameters('staticWebAppName')]"
                    },
                    "sku": {
                        "value": "[parameters('sku')]"
                    },
                    "skucode": {
                        "value": "[parameters('skucode')]"
                    },
                    "repositoryUrl": {
                        "value": "[parameters('repositoryUrl')]"
                    },
                    "branch": {
                        "value": "[parameters('branch')]"
                    },
                    "repositoryToken": {
                        "value": "[parameters('repositoryToken')]"
                    },
                    "appLocation": {
                        "value": "[parameters('appLocation')]"
                    },
                    "apiLocation": {
                        "value": "[parameters('apiLocation')]"
                    },
                    "appArtifactLocation": {
                        "value": "[parameters('appArtifactLocation')]"
                    }
                },
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "staticWebAppName": {
                            "type": "string",
                            "defaultValue": "swa-pmp-fe-001"
                        },
                        "sku": {
                            "type": "string",
                            "defaultValue": "Free"
                        },
                        "skucode": {
                            "type": "string",
                            "defaultValue": "Free"
                        },
                        "repositoryUrl": {
                            "type": "string",
                            "defaultValue": "https://github.com/willjonesazureadmin/password-manager-frontend"
                        },
                        "branch": {
                            "type": "string",
                            "defaultValue": "main"
                        },
                        "repositoryToken": {
                            "type": "securestring"
                        },
                        "appLocation": {
                            "type": "string",
                            "defaultValue": "/"
                        },
                        "apiLocation": {
                            "type": "string",
                            "defaultValue": ""
                        },
                        "appArtifactLocation": {
                            "type": "string",
                            "defaultValue": "wwwroot"
                        }
                    },
                    "resources": [
                        {
                            "apiVersion": "2019-12-01-preview",
                            "name": "[parameters('staticWebAppName')]",
                            "type": "Microsoft.Web/staticSites",
                            "location": "[resourceGroup().location]",
                            "properties": {
                                "repositoryUrl": "[parameters('repositoryUrl')]",
                                "branch": "[parameters('branch')]",
                                "repositoryToken": "[parameters('repositoryToken')]",
                                "buildProperties": {
                                    "appLocation": "[parameters('appLocation')]",
                                    "apiLocation": "[parameters('apiLocation')]",
                                    "appArtifactLocation": "[parameters('appArtifactLocation')]"
                                }
                            },
                            "sku": {
                                "Tier": "[parameters('sku')]",
                                "Name": "[parameters('skuCode')]"
                            }
                        }
                    ],
                    "outputs": {
                        "staticWebAppHostName": {
                            "type": "string",
                            "value": "[reference(resourceId('Microsoft.Web/staticSites', parameters('staticWebAppName')), '2019-12-01-preview').defaultHostname]"
                        }
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "dns",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments','staticWebApp')]"
            ],
            "subscriptionId": "[parameters('dnsZoneSubscription')]",
            "resourceGroup": "[parameters('dnsZoneResourceGroup')]",
            "properties": {
                "mode": "Incremental",
                "expressionEvaluationOptions": {
                    "scope": "Inner"
                },
                "parameters": {
                    "customDnsZone": {
                        "value": "[parameters('customDnsZone')]"
                    },
                    "customDnsName": {
                        "value": "[parameters('customDnsName')]"
                    },
                    "customDnsAlias": {
                        "value": "[reference('staticWebApp').outputs.staticWebAppHostName.value]"
                    }
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "customDnsZone": {
                            "type": "string",
                            "defaultValue": "azureadmin.co.uk"
                        },
                        "customDnsName": {
                            "type": "string",
                            "defaultValue": "test"
                        },
                        "customDnsAlias": {
                            "type": "string",
                            "defaultValue": "testAlias"
                        }
                    },
                    "resources": [
                        {
                            "type": "Microsoft.Network/dnsZones",
                            "apiVersion": "2018-05-01",
                            "name": "[parameters('customDnsZone')]",
                            "location": "global",
                            "properties": {

                            }
                        },
                        {
                            "type": "Microsoft.Network/dnsZones/CNAME",
                            "apiVersion": "2018-05-01",
                            "name": "[concat(parameters('customDnsZone'), '/', parameters('customDnsName'))]",
                            "location": "global",
                            "dependsOn": [
                                "[parameters('customDnsZone')]"
                            ],
                            "properties": {
                                "TTL": 3600,
                                "CNAMERecord": {
                                    "cname": "[parameters('customDnsAlias')]"
                                }
                            }
                        }
                    ],
                    "outputs": {
                    }
                }
            }
        },
        {
            "type" : "Microsoft.Web/staticSites/customDomains",
            "apiVersion" : "2020-12-01",
            "name" : "[concat(parameters('staticWebAppName'),'/', parameters('customDnsName'),'.',parameters('customDnsZone'))]",
            "dependsOn" :[
                "[resourceId(parameters('dnsZoneSubscription'), parameters('dnsZoneResourceGroup'), 'Microsoft.Resources/deployments','dns')]"
            ],
            "properties" : {

            }
        }

    ]
}
